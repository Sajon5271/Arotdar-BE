{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": { "spec": false },
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { "include": "./static/*", "outDir": "dist/static", "watchAssets": true }
    ]
  }
}
