{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": { "spec": false },
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {
        "include": "../static/**",
        "outDir": "dist/static",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"]
  }
}
